<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls1="clr-namespace:Valt.UI.UserControls"
        xmlns:local="clr-namespace:Valt.UI.Lang"
        xmlns:main1="clr-namespace:Valt.UI.Views.Main"
        xmlns:controls="clr-namespace:Valt.UI.Views.Main.Controls"
        mc:Ignorable="d"
        d:DesignWidth="1280" d:DesignHeight="650"
        MinWidth="1280" MinHeight="650"
        WindowStartupLocation="CenterScreen"
        x:Class="Valt.UI.Views.Main.MainView"
        x:DataType="main1:MainViewModel"
        Icon="/Assets/valt-logo.ico"
        Closing="Window_OnClosing"
        Title="VALT"
        SystemDecorations="BorderOnly"
        CanResize="True"
        TransparencyLevelHint="None"
        ExtendClientAreaTitleBarHeightHint="30"
        ExtendClientAreaToDecorationsHint="True">
    <Design.DataContext>
        <main1:MainViewModel />
    </Design.DataContext>
    <Window.KeyBindings>
        <KeyBinding Gesture="F2" Command="{Binding SendF2Command}" />
        <KeyBinding Gesture="F10" Command="{Binding OpenConversionCalculatorCommand}" />
    </Window.KeyBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding LayoutCustomTitleBarRowHeight}"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <userControls1:CustomTitleBar x:Name="CustomTitleBar" Grid.Row="0" Title="VALT"
                                      TitleBarPressed="Window_OnPointerPressed"
                                      CloseVisible="False" />
        <StackPanel Grid.Row="0" x:Name="AlternateTitleBar" Background="{DynamicResource Background900Color}"
                    IsVisible="False">
        </StackPanel>
        <Border Grid.Row="1" Padding="30, 0, 10, 0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%, 0%" EndPoint="0%, 100%">
                    <GradientStop Offset="0" Color="{DynamicResource Background900Color}"></GradientStop>
                    <GradientStop Offset="1" Color="{DynamicResource Background800Color}"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            <Grid ColumnDefinitions="*, *, 260">
                <!--Top bar buttons-->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Height="50" Spacing="15">
                    <DropDownButton Classes="icon" Content="&#xE5D2;">
                        <DropDownButton.Flyout>
                            <MenuFlyout>
                                <MenuItem Header="{x:Static local:language.Main_Menu_Categories}"
                                          Command="{Binding ManageCategoriesCommand}">
                                </MenuItem>
                                <MenuItem Header="{x:Static local:language.Menu_Tools}">
                                    <MenuItem Header="{x:Static local:language.Menu_ConversionCalculator}"
                                              Command="{Binding OpenConversionCalculatorCommand}">
                                    </MenuItem>
                                </MenuItem>
                                <Separator />
                                <MenuItem Header="{x:Static local:language.Menu_ImportTransactions}"
                                          Command="{Binding OpenImportWizardCommand}">
                                </MenuItem>
                                <MenuItem Header="{x:Static local:language.Menu_ExportTransactions}"
                                          Command="{Binding ExportTransactionsCommand}">
                                </MenuItem>
                                <Separator />
                                <MenuItem Header="{x:Static local:language.Main_Menu_Settings}"
                                          Command="{Binding ManageSettingsCommand}">
                                </MenuItem>
                                <MenuItem Header="{x:Static local:language.Main_Menu_HowToUse}"
                                          Command="{Binding HowToUseCommand}">
                                </MenuItem>
                                <MenuItem Header="{x:Static local:language.Main_Menu_About}"
                                          Command="{Binding AboutCommand}">
                                </MenuItem>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                    <!-- Transactions tab -->
                    <Button Classes="tab" Classes.selected="{Binding IsTransactionButtonSelected}"
                            Command="{Binding SetTransactionsTabCommand}"
                            Margin="5,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Label Classes="icon" Content="&#xE0EE;"></Label>
                                <Label Content="{x:Static local:language.Main_Transactions}" />
                            </StackPanel>
                            <Ellipse Name="TransactionsNotificationDot"
                                     Width="8" Height="8"
                                     Fill="{DynamicResource Accent500Brush}"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="0,0,0,0"
                                     IsVisible="{Binding TabRefreshState.TransactionsNeedsRefresh}">
                                <Ellipse.Styles>
                                    <Style Selector="Ellipse#TransactionsNotificationDot">
                                        <Style.Animations>
                                            <Animation Duration="0:0:0.5" IterationCount="INFINITE" PlaybackDirection="Alternate">
                                                <KeyFrame Cue="0%">
                                                    <Setter Property="Opacity" Value="0.3" />
                                                </KeyFrame>
                                                <KeyFrame Cue="100%">
                                                    <Setter Property="Opacity" Value="1" />
                                                </KeyFrame>
                                            </Animation>
                                        </Style.Animations>
                                    </Style>
                                </Ellipse.Styles>
                            </Ellipse>
                        </Grid>
                    </Button>
                    <!-- Reports tab -->
                    <Button Classes="tab" Classes.selected="{Binding IsReportButtonSelected}"
                            Command="{Binding SetReportsTabCommand}"
                            Margin="5,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Label Classes="icon" Content="&#xE26B;"></Label>
                                <Label Content="{x:Static local:language.Main_Reports}" />
                            </StackPanel>
                            <Ellipse Name="ReportsNotificationDot"
                                     Width="8" Height="8"
                                     Fill="{DynamicResource Accent500Brush}"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="0,0,0,0"
                                     IsVisible="{Binding TabRefreshState.ReportsNeedsRefresh}">
                                <Ellipse.Styles>
                                    <Style Selector="Ellipse#ReportsNotificationDot">
                                        <Style.Animations>
                                            <Animation Duration="0:0:0.5" IterationCount="INFINITE" PlaybackDirection="Alternate">
                                                <KeyFrame Cue="0%">
                                                    <Setter Property="Opacity" Value="0.3" />
                                                </KeyFrame>
                                                <KeyFrame Cue="100%">
                                                    <Setter Property="Opacity" Value="1" />
                                                </KeyFrame>
                                            </Animation>
                                        </Style.Animations>
                                    </Style>
                                </Ellipse.Styles>
                            </Ellipse>
                        </Grid>
                    </Button>
                    <!-- AvgPrice tab -->
                    <Button Classes="tab" Classes.selected="{Binding IsAvgPriceButtonSelected}"
                            Command="{Binding SetAvgPriceTabCommand}"
                            Margin="5,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Label Classes="icon" Content="&#xE227;"></Label>
                                <Label Content="{x:Static local:language.Main_AvgPrice}" />
                            </StackPanel>
                            <Ellipse Name="AvgPriceNotificationDot"
                                     Width="8" Height="8"
                                     Fill="{DynamicResource Accent500Brush}"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="0,0,0,0"
                                     IsVisible="{Binding TabRefreshState.AvgPriceNeedsRefresh}">
                                <Ellipse.Styles>
                                    <Style Selector="Ellipse#AvgPriceNotificationDot">
                                        <Style.Animations>
                                            <Animation Duration="0:0:0.5" IterationCount="INFINITE" PlaybackDirection="Alternate">
                                                <KeyFrame Cue="0%">
                                                    <Setter Property="Opacity" Value="0.3" />
                                                </KeyFrame>
                                                <KeyFrame Cue="100%">
                                                    <Setter Property="Opacity" Value="1" />
                                                </KeyFrame>
                                            </Animation>
                                        </Style.Animations>
                                    </Style>
                                </Ellipse.Styles>
                            </Ellipse>
                        </Grid>
                    </Button>
                </StackPanel>
      

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Classes="icon-only transparent link"
                            FontFamily="{DynamicResource MaterialDesign}"
                            FontSize="28"
                            Padding="8"
                            Margin="0, 24, 10, 0"
                            VerticalAlignment="Top"
                            Content="{Binding SecureModeIcon}"
                            Command="{Binding ToggleSecureModeCommand}"
                            ToolTip.Tip="{x:Static local:language.SecureMode_ToggleTooltip}" />
                    <!-- MCP Server Status Indicator -->
                    <Button Classes="transparent"
                            Margin="0, 10, 10, 0"
                            Padding="0"
                            VerticalAlignment="Top"
                            Command="{Binding ToggleMcpServerCommand}"
                            ToolTip.Tip="{Binding McpServerTooltip}">
                        <Border Background="{DynamicResource Background800Brush}"
                                BorderBrush="{DynamicResource Background600Brush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8, 8">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="6">
                                <!-- Toggle Switch -->
                                <ToggleSwitch IsChecked="{Binding IsMcpServerRunning, Mode=OneWay}"
                                              OnContent=""
                                              OffContent=""
                                              IsHitTestVisible="False"
                                              Padding="0"
                                              Margin="0"
                                              MinWidth="42"
                                              MinHeight="26"
                                              HorizontalAlignment="Center">
                                    <ToggleSwitch.Styles>
                                        <Style Selector="ToggleSwitch">
                                            <Setter Property="Height" Value="16" />
                                            <Setter Property="Width" Value="36" />
                                        </Style>
                                        <Style Selector="ToggleSwitch /template/ Border#SwitchKnobBounds">
                                            <Setter Property="Height" Value="14" />
                                            <Setter Property="Width" Value="32" />
                                            <Setter Property="CornerRadius" Value="7" />
                                        </Style>
                                        <Style Selector="ToggleSwitch /template/ Border#SwitchKnobBounds > Border#MovingKnobs > Border#OuterKnob">
                                            <Setter Property="Width" Value="10" />
                                            <Setter Property="Height" Value="10" />
                                            <Setter Property="CornerRadius" Value="5" />
                                        </Style>
                                    </ToggleSwitch.Styles>
                                </ToggleSwitch>
                                <!-- Status Dot -->
                                <Panel HorizontalAlignment="Center">
                                    <!-- Grey dot (stopped) -->
                                    <Ellipse Width="8" Height="8"
                                             Fill="{DynamicResource Disabled500Brush}"
                                             IsVisible="{Binding !IsMcpServerRunning}"
                                             HorizontalAlignment="Center" />
                                    <!-- Green dot (running) -->
                                    <Ellipse Width="8" Height="8"
                                             Fill="{DynamicResource SemanticPositive500Brush}"
                                             IsVisible="{Binding IsMcpServerRunning}"
                                             HorizontalAlignment="Center" />
                                    <!-- Red dot (error) -->
                                    <Ellipse Width="8" Height="8"
                                             Fill="{DynamicResource SemanticNegative500Brush}"
                                             IsVisible="{Binding IsMcpServerError}"
                                             HorizontalAlignment="Center" />
                                    <!-- Activity indicator (blinking) -->
                                    <Ellipse Name="McpActivityDot"
                                             Width="8"
                                             Height="8"
                                             HorizontalAlignment="Center"
                                             Fill="{DynamicResource WhiteBrush}"
                                             IsVisible="{Binding IsMcpProcessing}">
                                        <Ellipse.Styles>
                                            <Style Selector="Ellipse#McpActivityDot">
                                                <Style.Animations>
                                                    <Animation Duration="0:0:0.15" IterationCount="INFINITE" PlaybackDirection="Alternate">
                                                        <KeyFrame Cue="0%">
                                                            <Setter Property="Opacity" Value="0" />
                                                        </KeyFrame>
                                                        <KeyFrame Cue="100%">
                                                            <Setter Property="Opacity" Value="1" />
                                                        </KeyFrame>
                                                    </Animation>
                                                </Style.Animations>
                                            </Style>
                                        </Ellipse.Styles>
                                    </Ellipse>
                                </Panel>
                                <!-- MCP Label -->
                                <TextBlock Text="MCP"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource Text400Brush}"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Button>

                    <Border IsVisible="{Binding IsOffline}"
                            Margin="0, 10, 10, 0"
                            Padding="8, 14"
                            Background="{DynamicResource Background800Brush}"
                            BorderBrush="{DynamicResource Background600Brush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            HorizontalAlignment="Right">
                        <ToolTip.Tip>
                            <StackPanel>
                                <TextBlock Text="{x:Static local:language.Offline_Line1}" />
                                <TextBlock Text="{x:Static local:language.Offline_Line2}" FontSize="11" Opacity="0.8" />
                            </StackPanel>
                        </ToolTip.Tip>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock FontFamily="{DynamicResource MaterialDesign}"
                                       FontSize="20"
                                       Foreground="{DynamicResource Accent300Brush}"
                                       Text="&#xE002;"
                                       HorizontalAlignment="Center" />
                            <TextBlock Foreground="{DynamicResource Accent300Brush}"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Text="OFFLINE"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border IsVisible="{Binding ShowPepe}" HorizontalAlignment="Right" Margin="0, 10, 4, 0"
                            Width="100" Height="80"
                            ClipToBounds="True"
                            Background="{DynamicResource Background900Brush}"
                            CornerRadius="5">
                        <Border ClipToBounds="True">
                            <StackPanel Margin="0, -18, 0, 0">
                                <Image Source="{Binding PepeMoodImage}" Width="120"
                                       Height="120"
                                       HorizontalAlignment="Right" Margin="0, 5, 20, 0" Opacity="0.8">
                                </Image>
                            </StackPanel>
                        </Border>
                    </Border>
                </StackPanel>

                <!--Top bar prices-->
                <controls:LiveRates Grid.Column="2" Margin="0, 10, 0, 0" x:Name="LiveRatesControl"
                                    DataContext="{Binding LiveRatesViewModel}" />
            </Grid>
        </Border>
        <!-- Top Bar -->

        <Label Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding LoadingMessage}"
               IsVisible="{Binding IsLoading}" />

        <ContentControl x:Name="MainContentControl"
                        Grid.Row="2"
                        IsVisible="{Binding !IsLoading}"
                        Content="{Binding SelectedTabComponent}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />

        <!-- Footer Bar -->
        <Border Grid.Row="3" BorderThickness="0, 1, 0, 0"
                BorderBrush="{DynamicResource Background700Brush}">
            <Grid
                Classes="footer"
                ColumnDefinitions="*, 200">
                <userControls1:UpdateIndicator Grid.Column="0"
                                               DataContext="{Binding UpdateIndicator}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="10, 0, 0, 0" />
                <Button Grid.Column="1"
                        Classes="transparent link"
                        FontSize="12"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0, 0, 5, 0"
                        Command="{Binding OpenStatusDisplayCommand}"
                        Content="{Binding StatusDisplay}" />
            </Grid>
        </Border>
    </Grid>
</Window>