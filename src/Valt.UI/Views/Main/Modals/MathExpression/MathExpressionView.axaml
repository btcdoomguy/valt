<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:Valt.UI.UserControls"
        xmlns:local="clr-namespace:Valt.UI.Lang"
        xmlns:mathExpression11="clr-namespace:Valt.UI.Views.Main.Modals.MathExpression"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="255"
        MaxWidth="450"
        MaxHeight="255"
        x:Class="Valt.UI.Views.Main.Modals.MathExpression.MathExpressionView"
        x:DataType="mathExpression11:MathExpressionViewModel"
        Title="{x:Static local:language.MathExpression_Title}"
        WindowStartupLocation="CenterOwner"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None"
        ExtendClientAreaTitleBarHeightHint="0">
    <Window.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}" />
    </Window.KeyBindings>
    <Border>
        <StackPanel Orientation="Vertical">
            <userControls:CustomTitleBar Title="{x:Static local:language.MathExpression_Title}" TitleBarPressed="CustomTitleBarButtonPressed"
                                         CloseClick="CustomTitleBarCloseClicked" />
            <Border Classes="form-fields-area" Height="160">
                <StackPanel Classes="form-field">
                    <TextBlock Text="{x:Static local:language.MathExpression_Description}">
                    </TextBlock>
                    <TextBox Margin="0, 10, 0, 0"
                             TextWrapping="Wrap"
                             MinHeight="80"
                             Text="{Binding 
                             Expression, Mode=TwoWay}">
                    </TextBox>
                    <TextBlock Text="{Binding PreviewResult}" />
                </StackPanel>
            </Border>
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10"
                        Margin="0, 0, 0, 0">
                <Button Width="100" HorizontalContentAlignment="Center" Content="{x:Static local:language.OkButton}" Command="{Binding OkCommand}" IsDefault="True"></Button>
                <Button Width="100" HorizontalContentAlignment="Center" Content="{x:Static local:language.CancelButton}" Command="{Binding CancelCommand}" IsCancel="True"></Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>