<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:Valt.UI.UserControls"
        xmlns:local="clr-namespace:Valt.UI.Lang"
        xmlns:manageAsset="clr-namespace:Valt.UI.Views.Main.Modals.ManageAsset"
        mc:Ignorable="d"
        d:DesignWidth="650"
        d:DesignHeight="700"
        MinWidth="650"
        MinHeight="700"
        MaxWidth="650"
        MaxHeight="700"
        x:Class="Valt.UI.Views.Main.Modals.ManageAsset.ManageAssetView"
        x:DataType="manageAsset:ManageAssetViewModel"
        Title="{x:Static local:language.ManageAsset_Title}"
        WindowStartupLocation="CenterOwner"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None"
        ExtendClientAreaTitleBarHeightHint="0">
    <Design.DataContext>
        <manageAsset:ManageAssetViewModel />
    </Design.DataContext>
    <Window.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding CloseCommand}" />
    </Window.KeyBindings>
    <Border>
        <StackPanel Orientation="Vertical">
            <userControls:CustomTitleBar Title="{x:Static local:language.ManageAsset_Title}"
                                         TitleBarPressed="CustomTitleBarButtonPressed"
                                         CloseClick="CustomTitleBarCloseClicked" />
            <Border Classes="form-fields-area" Height="620">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Section 1: Basic Information -->
                        <Border Classes="form-section">
                            <StackPanel>
                                <TextBlock Classes="form-section-header" Text="{x:Static local:language.ManageAsset_Section_BasicInfo}" />

                                <!-- Name Field -->
                                <StackPanel Classes="form-field" HorizontalAlignment="Left">
                                    <TextBlock Text="{x:Static local:language.ManageAsset_Name}" />
                                    <TextBox Text="{Binding Name}" Width="250" />
                                </StackPanel>

                                <!-- Asset Type and Currency Row -->
                                <Grid ColumnDefinitions="250, 20, 250">
                                    <StackPanel Grid.Column="0" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_AssetType}" />
                                        <ComboBox ItemsSource="{Binding AvailableAssetTypes}"
                                                  SelectedValue="{Binding SelectedAssetType}"
                                                  DisplayMemberBinding="{Binding Text}"
                                                  SelectedValueBinding="{Binding Value}"
                                                  Width="250"
                                                  IsEnabled="{Binding !IsEditMode}" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_Currency}" />
                                        <ComboBox ItemsSource="{Binding AvailableCurrencies}"
                                                  SelectedItem="{Binding SelectedCurrency}"
                                                  Width="250" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Section 2: Asset Details (Basic Assets) -->
                        <Border Classes="form-section" IsVisible="{Binding ShowBasicFields}">
                            <StackPanel>
                                <TextBlock Classes="form-section-header" Text="{x:Static local:language.ManageAsset_Section_AssetDetails}" />

                                <StackPanel Classes="form-field">
                                    <TextBlock Text="{x:Static local:language.ManageAsset_Symbol}" />
                                    <Grid ColumnDefinitions="160, 10, 160, 10, Auto">
                                        <TextBox Grid.Column="0" Text="{Binding Symbol}" Width="160" />
                                        <ComboBox Grid.Column="2"
                                                  ItemsSource="{Binding AvailablePriceSources}"
                                                  SelectedValue="{Binding SelectedPriceSource}"
                                                  DisplayMemberBinding="{Binding Text}"
                                                  SelectedValueBinding="{Binding Value}"
                                                  Width="160" />
                                        <Button Grid.Column="4"
                                                Content="{x:Static local:language.ManageAsset_CheckSymbol}"
                                                Command="{Binding CheckSymbolCommand}"
                                                IsVisible="{Binding ShowCheckSymbolButton}"
                                                IsEnabled="{Binding !IsCheckingSymbol}"
                                                Width="80"
                                                HorizontalContentAlignment="Center" />
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,4,0,0"
                                                IsVisible="{Binding SymbolValidationMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                        <TextBlock FontFamily="{DynamicResource MaterialDesign}"
                                                   Text="&#xE86C;"
                                                   Foreground="#4CAF50"
                                                   IsVisible="{Binding IsSymbolValid}"
                                                   FontSize="16" />
                                        <TextBlock FontFamily="{DynamicResource MaterialDesign}"
                                                   Text="&#xE000;"
                                                   Foreground="#F44336"
                                                   IsVisible="{Binding !IsSymbolValid}"
                                                   FontSize="16" />
                                        <TextBlock Text="{Binding SymbolValidationMessage}"
                                                   IsVisible="{Binding IsSymbolValid}"
                                                   Foreground="#4CAF50"
                                                   FontSize="12" />
                                        <TextBlock Text="{Binding SymbolValidationMessage}"
                                                   IsVisible="{Binding !IsSymbolValid}"
                                                   Foreground="#F44336"
                                                   FontSize="12" />
                                    </StackPanel>
                                    <!-- Yahoo Finance Help -->
                                    <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,6,0,0"
                                                IsVisible="{Binding ShowYahooFinanceHelp}">
                                        <userControls:ModuleHelperText>
                                            <userControls:ModuleHelperText.HelpContent>
                                                <StackPanel Spacing="8" MaxWidth="320">
                                                    <TextBlock FontSize="{DynamicResource FontSizeSmall}"
                                                               Text="{x:Static local:language.ManageAsset_YahooFinanceHelp_Line1}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock FontSize="{DynamicResource FontSizeSmall}"
                                                               Text="{x:Static local:language.ManageAsset_YahooFinanceHelp_Line2}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock FontSize="{DynamicResource FontSizeSmall}"
                                                               Text="https://finance.yahoo.com/quote/PETR4.SA/"
                                                               TextWrapping="Wrap"
                                                               Foreground="{DynamicResource AccentBrush}" />
                                                </StackPanel>
                                            </userControls:ModuleHelperText.HelpContent>
                                        </userControls:ModuleHelperText>
                                        <TextBlock Text="{x:Static local:language.ManageAsset_YahooFinanceHelp_Hint}"
                                                   FontSize="{DynamicResource FontSizeSmall}"
                                                   Foreground="{DynamicResource Text400Brush}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <Grid ColumnDefinitions="250, 20, 250">
                                    <StackPanel Grid.Column="0" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_Quantity}" />
                                        <TextBox Text="{Binding Quantity}" Width="250" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Classes="form-field"
                                                IsVisible="{Binding ShowCurrentPriceField}">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_CurrentPrice}" />
                                        <userControls:FiatInput FiatValue="{Binding CurrentPriceFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Section 2: Asset Details (Real Estate) -->
                        <Border Classes="form-section" IsVisible="{Binding ShowRealEstateFields}">
                            <StackPanel>
                                <TextBlock Classes="form-section-header" Text="{x:Static local:language.ManageAsset_Section_AssetDetails}" />

                                <StackPanel Classes="form-field">
                                    <TextBlock Text="{x:Static local:language.ManageAsset_Address}" />
                                    <TextBox Text="{Binding Address}" Width="540" />
                                </StackPanel>

                                <Grid ColumnDefinitions="250, 20, 250">
                                    <StackPanel Grid.Column="0" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_CurrentValue}" />
                                        <userControls:FiatInput FiatValue="{Binding CurrentValueFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_RentalIncome}" />
                                        <userControls:FiatInput FiatValue="{Binding MonthlyRentalIncomeFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Section 2: Asset Details (Leveraged Position) -->
                        <Border Classes="form-section" IsVisible="{Binding ShowLeveragedFields}">
                            <StackPanel>
                                <TextBlock Classes="form-section-header" Text="{x:Static local:language.ManageAsset_Section_AssetDetails}" />

                                <!-- Underlying Asset Toggle (Bitcoin/Custom) -->
                                <StackPanel Classes="form-field">
                                    <TextBlock Text="{x:Static local:language.ManageAsset_UnderlyingAsset}" />
                                    <StackPanel Orientation="Horizontal" Spacing="20">
                                        <RadioButton Content="{x:Static local:language.ManageAsset_Bitcoin}"
                                                     IsChecked="{Binding IsBitcoinLeveraged}"
                                                     Command="{Binding SetBitcoinLeveragedCommand}"
                                                     GroupName="UnderlyingAsset" />
                                        <RadioButton Content="{x:Static local:language.ManageAsset_CustomAsset}"
                                                     IsChecked="{Binding IsCustomLeveraged}"
                                                     Command="{Binding SetCustomLeveragedCommand}"
                                                     GroupName="UnderlyingAsset" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Symbol + Price Source row (only for Custom) -->
                                <StackPanel Classes="form-field" IsVisible="{Binding ShowLeveragedSymbolRow}">
                                    <TextBlock Text="{x:Static local:language.ManageAsset_Symbol}" />
                                    <Grid ColumnDefinitions="160, 10, 160, 10, Auto">
                                        <TextBox Grid.Column="0" Text="{Binding Symbol}" Width="160" />
                                        <ComboBox Grid.Column="2"
                                                  ItemsSource="{Binding AvailablePriceSources}"
                                                  SelectedValue="{Binding SelectedPriceSource}"
                                                  DisplayMemberBinding="{Binding Text}"
                                                  SelectedValueBinding="{Binding Value}"
                                                  Width="160" />
                                        <Button Grid.Column="4"
                                                Content="{x:Static local:language.ManageAsset_CheckSymbol}"
                                                Command="{Binding CheckSymbolCommand}"
                                                IsVisible="{Binding ShowCheckSymbolButton}"
                                                IsEnabled="{Binding !IsCheckingSymbol}"
                                                Width="80"
                                                HorizontalContentAlignment="Center" />
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,4,0,0"
                                                IsVisible="{Binding SymbolValidationMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                        <TextBlock FontFamily="{DynamicResource MaterialDesign}"
                                                   Text="&#xE86C;"
                                                   Foreground="#4CAF50"
                                                   IsVisible="{Binding IsSymbolValid}"
                                                   FontSize="16" />
                                        <TextBlock FontFamily="{DynamicResource MaterialDesign}"
                                                   Text="&#xE000;"
                                                   Foreground="#F44336"
                                                   IsVisible="{Binding !IsSymbolValid}"
                                                   FontSize="16" />
                                        <TextBlock Text="{Binding SymbolValidationMessage}"
                                                   IsVisible="{Binding IsSymbolValid}"
                                                   Foreground="#4CAF50"
                                                   FontSize="12" />
                                        <TextBlock Text="{Binding SymbolValidationMessage}"
                                                   IsVisible="{Binding !IsSymbolValid}"
                                                   Foreground="#F44336"
                                                   FontSize="12" />
                                    </StackPanel>
                                    <!-- Yahoo Finance Help -->
                                    <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,6,0,0"
                                                IsVisible="{Binding ShowYahooFinanceHelp}">
                                        <userControls:ModuleHelperText>
                                            <userControls:ModuleHelperText.HelpContent>
                                                <StackPanel Spacing="8" MaxWidth="320">
                                                    <TextBlock FontSize="{DynamicResource FontSizeSmall}"
                                                               Text="{x:Static local:language.ManageAsset_YahooFinanceHelp_Line1}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock FontSize="{DynamicResource FontSizeSmall}"
                                                               Text="{x:Static local:language.ManageAsset_YahooFinanceHelp_Line2}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock FontSize="{DynamicResource FontSizeSmall}"
                                                               Text="https://finance.yahoo.com/quote/PETR4.SA/"
                                                               TextWrapping="Wrap"
                                                               Foreground="{DynamicResource AccentBrush}" />
                                                </StackPanel>
                                            </userControls:ModuleHelperText.HelpContent>
                                        </userControls:ModuleHelperText>
                                        <TextBlock Text="{x:Static local:language.ManageAsset_YahooFinanceHelp_Hint}"
                                                   FontSize="{DynamicResource FontSizeSmall}"
                                                   Foreground="{DynamicResource Text400Brush}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <Grid ColumnDefinitions="250, 20, 250">
                                    <StackPanel Grid.Column="0" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_Collateral}" />
                                        <userControls:FiatInput FiatValue="{Binding CollateralFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_Leverage}" />
                                        <TextBox Text="{Binding Leverage}" Width="250" />
                                    </StackPanel>
                                </Grid>

                                <Grid ColumnDefinitions="250, 20, 250">
                                    <StackPanel Grid.Column="0" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_EntryPrice}" />
                                        <userControls:FiatInput FiatValue="{Binding EntryPriceFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Classes="form-field"
                                                IsVisible="{Binding ShowCurrentPriceField}">
                                        <TextBlock Text="{x:Static local:language.ManageAsset_CurrentPrice}" />
                                        <userControls:FiatInput FiatValue="{Binding CurrentPriceFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                </Grid>

                                <StackPanel Classes="form-field" HorizontalAlignment="Left">
                                    <TextBlock Text="{x:Static local:language.ManageAsset_LiquidationPrice}" />
                                    <userControls:FiatInput FiatValue="{Binding LiquidationPriceFiat, Mode=TwoWay}"
                                                            CurrencySymbol="{Binding CurrencySymbol}"
                                                            SymbolOnRight="{Binding SymbolOnRight}"
                                                            Width="250" />
                                </StackPanel>

                                <StackPanel Classes="form-field">
                                    <CheckBox Content="{x:Static local:language.ManageAsset_IsLong}"
                                              IsChecked="{Binding IsLong}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Section 3: Acquisition (for Basic Assets) -->
                        <Border Classes="form-section" IsVisible="{Binding ShowBasicFields}">
                            <StackPanel>
                                <TextBlock Classes="form-section-header" Text="{x:Static local:language.ManageAsset_Section_Acquisition}" />

                                <Grid ColumnDefinitions="250, 20, 250">
                                    <StackPanel Grid.Column="0" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.Assets_AcquisitionDate}" />
                                        <CalendarDatePicker SelectedDate="{Binding AcquisitionDate}" Width="250" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.Assets_AcquisitionPrice}" />
                                        <userControls:FiatInput FiatValue="{Binding AcquisitionPriceFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Section 3: Acquisition (for Real Estate) -->
                        <Border Classes="form-section" IsVisible="{Binding ShowRealEstateFields}">
                            <StackPanel>
                                <TextBlock Classes="form-section-header" Text="{x:Static local:language.ManageAsset_Section_Acquisition}" />

                                <Grid ColumnDefinitions="250, 20, 250">
                                    <StackPanel Grid.Column="0" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.Assets_AcquisitionDate}" />
                                        <CalendarDatePicker SelectedDate="{Binding AcquisitionDate}" Width="250" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Classes="form-field">
                                        <TextBlock Text="{x:Static local:language.Assets_AcquisitionPrice}" />
                                        <userControls:FiatInput FiatValue="{Binding AcquisitionPriceFiat, Mode=TwoWay}"
                                                                CurrencySymbol="{Binding CurrencySymbol}"
                                                                SymbolOnRight="{Binding SymbolOnRight}"
                                                                Width="250" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Section 4: Display Settings -->
                        <Border Classes="form-section">
                            <StackPanel>
                                <TextBlock Classes="form-section-header" Text="{x:Static local:language.ManageAsset_Section_Display}" />

                                <StackPanel Classes="form-field">
                                    <CheckBox Content="{x:Static local:language.ManageAsset_IncludeInNetWorth}"
                                              IsChecked="{Binding IncludeInNetWorth}" />
                                </StackPanel>

                                <StackPanel Classes="form-field">
                                    <CheckBox Content="{x:Static local:language.ManageAsset_Visible}"
                                              IsChecked="{Binding Visible}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10"
                        Margin="0, 0, 0, 0">
                <Button Width="100" Content="{x:Static local:language.OkButton}" HorizontalContentAlignment="Center" Command="{Binding OkCommand}" />
                <Button Width="100" Content="{x:Static local:language.CancelButton}" HorizontalContentAlignment="Center" Command="{Binding CancelCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
