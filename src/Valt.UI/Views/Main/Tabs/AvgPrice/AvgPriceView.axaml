<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avgPrice="clr-namespace:Valt.UI.Views.Main.Tabs.AvgPrice"
             xmlns:lang="clr-namespace:Valt.UI.Lang"
             mc:Ignorable="d" d:DesignWidth="1300" d:DesignHeight="650"
             x:Class="Valt.UI.Views.Main.Tabs.AvgPrice.AvgPriceView"
             x:DataType="avgPrice:AvgPriceViewModel">
    <Design.DataContext>
        <avgPrice:AvgPriceViewModel />
    </Design.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />   <!-- Right Column -->
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Padding="15">
            <Grid RowDefinitions="50, *">
                <!-- Header Row with Profile Selector and Add Button -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                        <ComboBox ItemsSource="{Binding Profiles}"
                                  SelectedItem="{Binding SelectedProfile}"
                                  HorizontalAlignment="Stretch"
                                  IsTextSearchEnabled="True"
                                  Height="34"
                                  Width="200"
                                  TabIndex="0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            FontFamily="{DynamicResource MaterialDesign}" FontSize="20"
                                            Text="{Binding Unicode}"
                                            Foreground="{Binding Color, Converter={StaticResource SystemDrawingColorToBrushConverter}}">
                                        </TextBlock>
                                        <TextBlock Padding="2, 4, 0, 0" Text="{Binding DisplayName}">
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Command="{Binding ManageProfilesCommand}"
                                Content="{x:Static lang:language.AvgPrice_ManageProfiles}" />
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding AddOperationCommand}"
                                Content="{x:Static lang:language.AvgPrice_AddOperation}" />
                    </StackPanel>
                </Grid>
                <!-- Lines DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Lines}"
                          SelectedItem="{Binding SelectedLine}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          SelectionMode="Single"
                          Margin="0,10,0,0">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{x:Static lang:language.AvgPrice_Menu_Edit}"
                                      Command="{Binding EditOperationCommand}" />
                            <MenuItem Header="{x:Static lang:language.AvgPrice_Menu_Delete}"
                                      Command="{Binding DeleteOperationCommand}" />
                            <Separator />
                            <MenuItem Header="{x:Static lang:language.AvgPrice_Menu_MoveUp}"
                                      Command="{Binding MoveUpCommand}" />
                            <MenuItem Header="{x:Static lang:language.AvgPrice_Menu_MoveDown}"
                                      Command="{Binding MoveDownCommand}" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_Date}"
                                            Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}"
                                            Width="100"
                                            CanUserSort="False" />
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_Type}"
                                            Binding="{Binding AvgPriceLineTypeId, Converter={StaticResource AvgPriceLineTypeConverter}}"
                                            Width="80"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_Quantity}"
                                            Binding="{Binding Quantity, StringFormat=N8}"
                                            Width="120"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_UnitPrice}"
                                            Binding="{Binding UnitPrice, StringFormat=N2}"
                                            Width="120"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_Amount}"
                                            Binding="{Binding Amount, StringFormat=N2}"
                                            Width="120"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_TotalQuantity}"
                                            Binding="{Binding TotalQuantity, StringFormat=N8}"
                                            Width="120"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_TotalCost}"
                                            Binding="{Binding TotalCost, StringFormat=N2}"
                                            Width="120"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_AvgCost}"
                                            Binding="{Binding AvgCostOfAcquisition, StringFormat=N2}"
                                            Width="120"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="{x:Static lang:language.AvgPrice_Column_Comment}"
                                            Binding="{Binding Comment}"
                                            Width="*" 
                                            CanUserSort="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        <StackPanel Grid.Column="1">
            <DataGrid>

            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>