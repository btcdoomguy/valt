<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:Valt.UI.UserControls">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel>
                <Button>Hello</Button>
                <ListBox FontSize="14">
                    <ListBoxItem>a</ListBoxItem>
                    <ListBoxItem>b</ListBoxItem>
                    <ListBoxItem>c</ListBoxItem>
                </ListBox>
                <Button Classes="icon-selector-button"></Button>
                <Button Classes="rounded" Content="&#xE145;"></Button>
                <Button Classes="text-and-icon">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xe2c2;"></Label>
                        <Label>Overview</Label>
                    </StackPanel>
                </Button>
                <Button Classes="tab">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xe2c2;"></Label>
                        <Label>Overview</Label>
                    </StackPanel>
                </Button>
                <Button Classes="tab selected">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xe2c2;"></Label>
                        <Label>Transactions</Label>
                    </StackPanel>
                </Button>

                <Button Classes="transaction-option">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Foo Mode</Label>
                    </StackPanel>
                </Button>
                <Button Classes="transaction-option selected">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Foo Mode</Label>
                    </StackPanel>
                </Button>
                <Button Classes="transaction-option debt">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Debt</Label>
                    </StackPanel>
                </Button>
                <Button Classes="transaction-option selected debt">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Debt</Label>
                    </StackPanel>
                </Button>
                <Button Classes="transaction-option credit">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Credit</Label>
                    </StackPanel>
                </Button>
                <Button Classes="transaction-option selected credit">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Credit</Label>
                    </StackPanel>
                </Button>
                <Button Classes="transaction-option transfer">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Transfer</Label>
                    </StackPanel>
                </Button>
                <Button Classes="transaction-option selected transfer">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="icon" Content="&#xE15B;"></Label>
                        <Label>Transfer</Label>
                    </StackPanel>
                </Button>
                <Button Content="Transactions" />
                <Button Content="Living costs" Classes="selected" />
                <Button Classes="icon-only transparent" Content="&#xe2c2;" />
                <Button Classes="calculator" Content="&#xEA5F;" />
                <Button Classes="transparent link">View all</Button>
                <userControls:CustomTitleBar Title="Testing" />
            </StackPanel>

        </Border>
    </Design.PreviewWith>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         GLOBAL / WINDOW STYLES
         Reference: https://github.com/AvaloniaUI/Avalonia/blob/master/src/Avalonia.Themes.Fluent/Controls/
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Window">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background400Brush}" />
        <Setter Property="FontFamily" Value="{DynamicResource GeistMono}" />
        <Setter Property="Background" Value="{DynamicResource Background800Brush}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="Window > Border">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background900Brush}" />
    </Style>

    <!-- Modal dialog container - visible border for chromeless windows -->
    <Style Selector="Border.modal-container">
        <Setter Property="Background" Value="{DynamicResource Background800Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background400Brush}" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- About window uses Mono font -->
    <Style Selector="Window.about">
        <Setter Property="FontFamily" Value="Mono" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         TYPOGRAPHY
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="TextBlock">
        <Setter Property="Padding" Value="2" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="Label">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="TextBlock.titlebar-text">
        <Setter Property="Padding" Value="0, 4, 0, 0" />
    </Style>

    <!-- Material Design icon styling for TextBlocks -->
    <Style Selector="TextBlock.icon">
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="2, 4, 0, 0" />
    </Style>

    <Style Selector="TextBlock.icon-text">
        <Setter Property="Padding" Value="0, 6, 0, 0" />
    </Style>

    <Style Selector="TextBlock.only-text">
        <Setter Property="Padding" Value="2, 6, 8, 0" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         INPUT CONTROLS - Ensure text visibility
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource Accent500Brush}" />
    </Style>

    <Style Selector="ComboBox">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="ComboBox /template/ ContentControl#ContentPresenter">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="NumericUpDown">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="NumericUpDown /template/ TextBox">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         DATA VALIDATION
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="DataValidationErrors">
        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel LastChildFill="True">
                    <ContentControl DockPanel.Dock="Right"
                                    ContentTemplate="{TemplateBinding ErrorTemplate}"
                                    DataContext="{TemplateBinding Owner}"
                                    Content="{Binding (DataValidationErrors.Errors)}"
                                    IsVisible="{Binding (DataValidationErrors.HasErrors)}"/>
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Background="{TemplateBinding Background}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      CornerRadius="{TemplateBinding CornerRadius}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Content="{TemplateBinding Content}"
                                      Padding="{TemplateBinding Padding}"/>
                </DockPanel>
            </ControlTemplate>
        </Setter>
        <Setter Property="ErrorTemplate">
            <DataTemplate x:DataType="{x:Type x:Object}">
                <Canvas Width="14" Height="14" Margin="4 0 1 0"
                        Background="Transparent">
                    <Canvas.Styles>
                        <Style Selector="ToolTip">
                            <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
                            <Setter Property="BorderBrush" Value="{DynamicResource Background600Brush}" />
                        </Style>
                    </Canvas.Styles>
                    <ToolTip.Tip>
                        <ItemsControl ItemsSource="{Binding}"/>
                    </ToolTip.Tip>
                    <Path Data="M14,7 A7,7 0 0,0 0,7 M0,7 A7,7 0 1,0 14,7 M7,3l0,5 M7,9l0,2"
                          Stroke="{DynamicResource SemanticWarning200Brush}"
                          StrokeThickness="2"/>
                </Canvas>
            </DataTemplate>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         BUTTONS - Base Styles
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Button">
        <Setter Property="Padding" Value="6, 6, 6, 4" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="{DynamicResource Accent700Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Accent400Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Style Selector="^ /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.1" />
                    <BrushTransition Property="Foreground" Duration="0:0:0.1" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.1" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource Accent800Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Accent300Brush}" />
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
    </Style>

    <!-- Transparent button modifier -->
    <Style Selector="Button.transparent">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.transparent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- Link-style button -->
    <Style Selector="Button.link">
        <Setter Property="Foreground" Value="{DynamicResource Text300Brush}" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
    </Style>

    <!-- Delete button (destructive action) -->
    <Style Selector="Button.delete-button">
        <Setter Property="Background" Value="{DynamicResource SemanticNegative600Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SemanticNegative300Brush}" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SemanticNegative700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SemanticNegative200Brush}" />
        </Style>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         BUTTONS - Icon Variants
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Button.icon-only">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
    </Style>

    <Style Selector="Button.calculator">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Padding" Value="2, 0, 2, 0" />
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Content" Value="&#xEA5F;" />
        <Setter Property="BorderThickness" Value="0" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ButtonOverlayLightBrush}" />
            <Setter Property="BorderBrush" Value="White" />
        </Style>
    </Style>

    <Style Selector="Button.text-and-icon">
        <Setter Property="Padding" Value="2" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="{DynamicResource Accent700Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Accent400Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        <Style Selector="^ Label">
            <Setter Property="Margin" Value="0, 6, 0 ,4" />
        </Style>
        <Style Selector="^ Label.icon">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
            <Setter Property="Margin" Value="0, 2, 0 ,0" />
        </Style>
    </Style>

    <Style Selector="Button.rounded">
        <Setter Property="Padding" Value="5, 2, 0, 0" />
        <Setter Property="Background" Value="{DynamicResource ButtonOverlayMediumBrush}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
        <Style Selector="^ /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ButtonOverlayLightBrush}" />
            <Setter Property="BorderBrush" Value="White" />
        </Style>
    </Style>

    <Style Selector="Button.icon-selector-button">
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Width" Value="42" />
        <Setter Property="Height" Value="42" />
        <Style Selector="^ /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Black" />
            <Setter Property="BorderBrush" Value="White" />
        </Style>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         BUTTONS - Navigation Tabs
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Button.tab">
        <Setter Property="Padding" Value="2" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
        </Style>
        <Style Selector="^.selected">
            <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Background400Brush}" />
        </Style>
        <Style Selector="^ Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0, 3 0, 2" />
        </Style>
        <Style Selector="^ Label.icon">
            <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style Selector="^ /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0" />
                    <BrushTransition Property="Foreground" Duration="0:0:0" />
                </Transitions>
            </Setter>
        </Style>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         BUTTONS - Transaction Type Options (Debt/Credit/Transfer)
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Button.transaction-option">
        <Setter Property="Padding" Value="2" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Style Selector="^ Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0, 2, 0, 3" />
        </Style>
        <Style Selector="^ Label.icon">
            <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style Selector="^ /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0" />
                </Transitions>
            </Setter>
        </Style>
        <!-- Default (untyped) states -->
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
        </Style>
        <Style Selector="^.selected">
            <Setter Property="Background" Value="{DynamicResource Background800Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
        </Style>
        <!-- Credit variant -->
        <Style Selector="^.credit:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SemanticPositive700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CreditBaseBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
        <Style Selector="^.credit.selected">
            <Setter Property="Background" Value="{DynamicResource SemanticPositive700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CreditBaseBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
        <!-- Debt variant -->
        <Style Selector="^.debt:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SemanticNegative700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DebtBaseBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
        <Style Selector="^.debt.selected">
            <Setter Property="Background" Value="{DynamicResource SemanticNegative700Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DebtBaseBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
        <!-- Transfer variant -->
        <Style Selector="^.transfer:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SemanticWarning800Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource TransferBaseBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
        <Style Selector="^.transfer.selected">
            <Setter Property="Background" Value="{DynamicResource SemanticWarning800Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource TransferBaseBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        </Style>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         BUTTONS - Title Bar
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Button.titlebar">
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Width" Value="30" />
        <Setter Property="Padding" Value="6, 0, 0, 2" />
        <Style Selector="^ /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.1" />
                    <BrushTransition Property="Foreground" Duration="0:0:0.1" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="^:disabled /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}" />
        </Style>
    </Style>

    <Style Selector="Button.titlebar.close">
        <Setter Property="Content" Value="&#xE5CD;" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.titlebar.maximize">
        <Setter Property="Content" Value="&#xEB54;" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.titlebar.minimize">
        <Setter Property="Content" Value="&#xE931;" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         DROP DOWN BUTTONS
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="DropDownButton.icon">
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Background" Value="{DynamicResource TopBarButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TopBarButtonForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Accent700Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8, 6" />
        <!-- Style the main border background -->
        <Style Selector="^ /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource TopBarButtonBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Accent700Brush}" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.1" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.1" />
                </Transitions>
            </Setter>
        </Style>
        <!-- Hover state - entire button -->
        <Style Selector="^:pointerover /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource TopBarButtonBackgroundHoverBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Accent500Brush}" />
        </Style>
        <Style Selector="^:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TopBarButtonForegroundHoverBrush}" />
        </Style>
        <!-- Pressed state -->
        <Style Selector="^:pressed /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource TopBarButtonBackgroundSelectedBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Accent300Brush}" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Foreground" Value="{DynamicResource BlackBrush}" />
        </Style>
        <!-- Style the dropdown indicator arrow -->
        <Style Selector="^ /template/ PathIcon#DropDownGlyph">
            <Setter Property="Foreground" Value="{DynamicResource TopBarButtonForegroundBrush}" />
        </Style>
        <Style Selector="^:pointerover /template/ PathIcon#DropDownGlyph">
            <Setter Property="Foreground" Value="{DynamicResource TopBarButtonForegroundHoverBrush}" />
        </Style>
        <Style Selector="^:pressed /template/ PathIcon#DropDownGlyph">
            <Setter Property="Foreground" Value="{DynamicResource BlackBrush}" />
        </Style>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         DATA GRID
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="DataGrid">
        <Setter Property="Background" Value="{DynamicResource Background900Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <!-- DataGrid cell foreground - ensure text is visible -->
    <Style Selector="DataGridCell">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <!-- Alternating row colors -->
    <Style Selector="DataGridRow:nth-child(odd)">
        <Setter Property="Background" Value="{DynamicResource Background800Brush}" />
    </Style>
    <Style Selector="DataGridRow:nth-child(even)">
        <Setter Property="Background" Value="{DynamicResource Background900Brush}" />
    </Style>

    <!-- Row hover state -->
    <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{DynamicResource Background700Brush}" />
    </Style>

    <!-- Row selection states -->
    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{DynamicResource Secondary600Brush}" />
        <Setter Property="Opacity" Value="{DynamicResource DataGridRowSelectedUnfocusedBackgroundOpacity}" />
    </Style>
    <Style Selector="DataGridRow:selected:pointerover /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{DynamicResource Secondary600Brush}" />
        <Setter Property="Opacity" Value="{DynamicResource DataGridRowSelectedHoveredUnfocusedBackgroundOpacity}" />
    </Style>
    <Style Selector="DataGridRow:selected:focus /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{DynamicResource Secondary600Brush}" />
        <Setter Property="Opacity" Value="{DynamicResource DataGridRowSelectedBackgroundOpacity}" />
    </Style>
    <Style Selector="DataGridRow:selected:pointerover:focus /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{DynamicResource Secondary600Brush}" />
        <Setter Property="Opacity" Value="{DynamicResource DataGridRowSelectedHoveredBackgroundOpacity}" />
    </Style>

    <!-- DataGrid cell text styling (consolidated from views) -->
    <Style Selector="DataGridCell TextBlock">
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- DataGrid column header styling - override template to remove sort icon reserved space -->
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="4, 6" />
        <Setter Property="SeparatorBrush" Value="{DynamicResource Background500Brush}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Name="PART_ColumnHeaderRoot"
                      Background="{TemplateBinding Background}">
                    <!-- Content area - no reserved sort icon space -->
                    <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                          Margin="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </Grid>
                    <!-- Column separator - overlaid at right edge -->
                    <Rectangle Name="VerticalSeparator"
                               Width="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Stretch"
                               Fill="{TemplateBinding SeparatorBrush}"
                               IsVisible="{TemplateBinding AreSeparatorsVisible}" />
                    <!-- Resize gripper - overlaid at right edge -->
                    <Thumb Name="PART_ResizeGripper"
                           Width="8"
                           HorizontalAlignment="Right"
                           Margin="0,0,-4,0"
                           Background="Transparent"
                           Cursor="SizeWestEast"
                           IsVisible="{Binding $parent[DataGrid].CanUserResizeColumns}" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="DataGridCell TextBlock">
        <Setter Property="Padding" Value="0, 0, 0, 0" />
        <Setter Property="Margin" Value="8, 2, 0, 0" />
    </Style>
    
    <Style Selector="DataGridColumnHeader Label">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style Selector="DataGridColumnHeader TextBlock">
        <Setter Property="TextTrimming" Value="None" />
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         CALENDAR DATE PICKER
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Override CalendarDatePicker button template to use Material Design icon -->
    <Style Selector="CalendarDatePicker /template/ Button#PART_Button">
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="Transparent"
                        CornerRadius="4"
                        x:Name="ButtonBorder">
                    <TextBlock Text="&#xE935;"
                               FontFamily="{StaticResource MaterialDesign}"
                               FontSize="20"
                               Foreground="{DynamicResource Text200Brush}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               x:Name="IconText" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="CalendarDatePicker /template/ Button#PART_Button:pointerover /template/ TextBlock#IconText">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         CALENDAR (popup)
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Calendar - set compact size -->
    <Style Selector="Calendar">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- CalendarItem - the main container -->
    <Style Selector="CalendarItem">
        <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background700Brush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HeaderBackground" Value="{DynamicResource Background700Brush}" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="DayTitleTemplate">
            <Template x:DataType="x:String">
                <TextBlock Text="{Binding}"
                           FontSize="11"
                           Foreground="{DynamicResource Text300Brush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="0" />
            </Template>
        </Setter>
    </Style>

    <!-- Hide the background layer that causes visual issues -->
    <Style Selector="CalendarItem /template/ Border#BackgroundLayer">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <!-- Center the month view grid -->
    <Style Selector="CalendarItem /template/ Grid#PART_MonthView">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- Center the year view grid -->
    <Style Selector="CalendarItem /template/ Grid#PART_YearView">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- Header button (shows month/year) - override template to remove grey background -->
    <Style Selector="CalendarItem /template/ Button#PART_HeaderButton">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        <Setter Property="Padding" Value="4, 0" />
    </Style>
    <Style Selector="CalendarItem /template/ Button#PART_HeaderButton /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="CalendarItem /template/ Button#PART_HeaderButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource Background600Brush}" />
    </Style>

    <!-- Navigation buttons - transparent background -->
    <Style Selector="CalendarItem /template/ Button#PART_PreviousButton">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="CalendarItem /template/ Button#PART_PreviousButton /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="CalendarItem /template/ Button#PART_PreviousButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource Background600Brush}" />
    </Style>

    <Style Selector="CalendarItem /template/ Button#PART_NextButton">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="CalendarItem /template/ Button#PART_NextButton /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="CalendarItem /template/ Button#PART_NextButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource Background600Brush}" />
    </Style>

    <!-- Day buttons (the actual day numbers) -->
    <Style Selector="CalendarDayButton">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="MinWidth" Value="26" />
        <Setter Property="MinHeight" Value="26" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- Day buttons - inactive (other months) -->
    <Style Selector="CalendarDayButton:inactive">
        <Setter Property="Foreground" Value="{DynamicResource Text400Brush}" />
    </Style>

    <!-- Day buttons - today highlight -->
    <Style Selector="CalendarDayButton:today">
        <Setter Property="Background" Value="{DynamicResource Accent600Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <!-- Day buttons - selected -->
    <Style Selector="CalendarDayButton:selected">
        <Setter Property="Background" Value="{DynamicResource Secondary600Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <!-- Day buttons - hover -->
    <Style Selector="CalendarDayButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource Background600Brush}" />
    </Style>

    <!-- Month/Year buttons in year/decade view -->
    <Style Selector="CalendarButton">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="MinWidth" Value="44" />
        <Setter Property="MinHeight" Value="26" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="CalendarButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource Background600Brush}" />
    </Style>

    <Style Selector="CalendarButton:pressed">
        <Setter Property="Background" Value="{DynamicResource Secondary600Brush}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         DATE PICKER
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="DatePicker /template/ TextBlock#PART_DayTextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,4,0" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="DatePicker /template/ TextBlock#PART_MonthTextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,4,0" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="DatePicker /template/ TextBlock#PART_YearTextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="DatePicker /template/ Rectangle#PART_FirstSpacer">
        <Setter Property="Width" Value="8" />
    </Style>

    <Style Selector="DatePicker /template/ Rectangle#PART_SecondSpacer">
        <Setter Property="Width" Value="8" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         LIST BOX
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Override Fluent theme's default ListBox/ListBoxItem colors -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="{DynamicResource Background900Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
    </Style>

    <Style Selector="ListBox.regularListBox">
        <Setter Property="Background" Value="{DynamicResource Background900Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Style Selector="^ ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource Secondary700Color}" />
        </Style>
        <Style Selector="^ ListBoxItem">
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5, 5, 5, 0" />
        </Style>
    </Style>

    <Style Selector="ListBox.accounts">
        <Setter Property="Background" Value="{DynamicResource Background900Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Style Selector="^ ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.3" />
                </Transitions>
            </Setter>
            <Setter Property="Background" Value="{DynamicResource Secondary700Color}" />
        </Style>
        <Style Selector="^ ListBoxItem">
            <Setter Property="Padding" Value="5, 5, 5, 0" />
        </Style>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         TREE VIEW
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="TreeView">
        <Setter Property="Background" Value="{DynamicResource Background900Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style Selector="TreeViewItem">
        <Setter Property="Padding" Value="5" />
        <Style Selector="^ /template/ Border#SelectionBorder:pointerover">
            <Setter Property="Background" Value="{DynamicResource Secondary800Color}" />
        </Style>
        <Style Selector="^:selected /template/ Border#SelectionBorder">
            <Setter Property="Background" Value="{DynamicResource Secondary600Color}" />
        </Style>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         FORMS
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Border.form-fields-area">
        <Setter Property="Background" Value="{DynamicResource Background800Brush}" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background400Brush}" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style Selector="StackPanel.form-field">
        <Setter Property="Margin" Value="0, 5, 0, 5" />
    </Style>

    <Style Selector=".form-field > TextBlock">
        <Setter Property="Margin" Value="0, 0, 0, 5" />
    </Style>

    <!-- Hint box - informational message with left accent border -->
    <Style Selector="Border.hint-box">
        <Setter Property="Background" Value="{DynamicResource Secondary800Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Secondary400Brush}" />
        <Setter Property="BorderThickness" Value="3, 1, 1, 1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style Selector="Border.hint-box > TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource Text200Brush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         LAYOUT - Footer
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <Style Selector="Grid.footer">
        <Setter Property="Background" Value="{DynamicResource FooterBackgroundBrush}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         EXPANDER - Reports Section Headers
         ═══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Override Fluent theme's default Expander colors -->
    <Style Selector="Expander">
        <Setter Property="Background" Value="{DynamicResource Background800Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Background500Brush}" />
    </Style>

    <Style Selector="Expander /template/ ToggleButton#PART_toggle">
        <Setter Property="Background" Value="{DynamicResource Background700Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource Text100Brush}" />
    </Style>

    <Style Selector="Expander /template/ ToggleButton#PART_toggle:pointerover">
        <Setter Property="Background" Value="{DynamicResource Background600Brush}" />
    </Style>

    <Style Selector="Expander /template/ Border#ExpanderContent">
        <Setter Property="Background" Value="{DynamicResource Background800Brush}" />
    </Style>

    <Style Selector="Expander.section">
        <Setter Property="Margin" Value="0, 0, 0, 12" />
    </Style>

    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource Text200Brush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="TextBlock.section-header-icon">
        <Setter Property="FontFamily" Value="{DynamicResource MaterialDesign}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="{DynamicResource Accent300Brush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0, 0, 10, 0" />
        <Setter Property="Padding" Value="0" />
    </Style>
</Styles>
